{
    "name": "dnj/windows-isomaker",
    "description": "A library for make ISO files customize",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "dnj\\IsoMaker\\Windows\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "dnj\\IsoMaker\\Windows\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^7.4|^8.0",
        "dnj/tmp-filesystem": "^1.0",
        "dnj/autounattend": "^1.0",
        "dnj/isomaker": "^1.1",
        "psr/log": "^1|^2|^3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^0.12.85",
        "friendsofphp/php-cs-fixer": "^3.1"
    },
    "scripts": {
        "test:types": "vendor/bin/phpstan analyse",
        "test:phpunit": "vendor/bin/phpunit",
        "test:codestyle": "vendor/bin/php-cs-fixer fix -v --dry-run --stop-on-violation --using-cache=no",
        "test": [
            "@test:types",
            "@test:phpunit",
            "@test:codestyle"
        ]
    }
}
